@model IEnumerable<ExpenseManagement.Model.Item>

<div class="container" p-3>
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Borrowed Item List</h2>
        </div>
        <div class="col-6">
            Create new Items
        </div>
    </div>
    <br />
     @if(Model.Count() > 0)
     {
         <table class="table table-bordered table-striped" style="width:100%">
             <thead>
                 <tr>
                     <th>
                         Item Name
                     </th>
                     <th>
                         Borrwed
                     </th>
                     <th>
                         Lender
                     </th>
                 </tr>
             </thead>
             <tbody>
                 @foreach (var items in Model)
                 {
                 <tr>
                     <td width="30%"></td>
                     <td width="30%">@items.Borrower</td>
                     <td width="30%">@items.Id</td>

                 </tr>
                 }



             </tbody>
         </table>
     }
     else
     {
         <p>No items</p>
     }



</div>

